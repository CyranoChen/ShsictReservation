@model Shsict.Reservation.Mvc.Models.SecureNode.SecureNodeModels.HistoryDto

@{
    ViewBag.Title = "History";
    Layout = "~/Views/Shared/_LayoutMobileSecureNode.cshtml";
}

@section Styles {

}

@section Scripts {
    <script type="text/javascript">
        $(function () {

        });
    </script>
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row col-md-12">
            @if (Model.MyCheckLists != null && Model.MyCheckLists.Count > 0)
            {
                foreach (var m in Model.MyCheckLists)
                {
                    <div class="col-md-6">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title">
                                    <i class="fa fa-info-circle"></i> @m.SecureNode.SecureNodeName
                                </h3>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                <!-- /.form group -->
                                <div class="form-group">
                                    <div class="col-xs-12">
                                        @m.SecureNode.CheckRequirement
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <div class="col-xs-2">@m.CheckResult @m.CheckNodePoint</div>
                                        <div class="col-xs-5">@m.CheckTime</div>
                                        <div class="col-xs-5">@m.CheckLocation</div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.box-body -->
                            @if (!string.IsNullOrEmpty(m.Remark))
                            { 
                            <div class="box-footer">
                                <div class="col-sm-offset-2 col-sm-10">
                                    @m.Remark
                                </div>
                            </div>
                            }
                        </div>
                    </div>
                }
            }
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
