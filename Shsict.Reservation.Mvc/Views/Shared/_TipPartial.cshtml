@model Shsict.Reservation.Mvc.Models.TipDto

<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title"><i class="fa fa-info-circle"></i> @Html.Raw(Model.Title)</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body">
        @Html.Raw(Model.Message)
    </div>
    <!-- /.box-body -->
    <div class="box-footer">
        <a href="@Model.HyperLinkHref" class="btn btn-primary">
            @Html.Raw(@Model.HyperLinkText)
        </a>
    </div>
    <!-- /.box-footer-->
</div>
<!-- /.box -->