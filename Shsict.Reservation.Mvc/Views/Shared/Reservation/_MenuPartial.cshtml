@model Shsict.Reservation.Mvc.Models.ReservationModels.IndexDto

@if (Model.MenuA != null && Model.MenuB != null && Model.MenuDate == DateTime.Today)
{
    <div class="col-md-6">
        <!-- Widget: user widget style 1 -->
        <div class="box box-widget widget-user-2">
            <!-- Add the bg color to the header using any of the bg-* classes -->
            <div class="widget-user-header bg-green-gradient">
                <div class="widget-user-image">
                    <img class="img-circle" src="/Content/images/img-lunch.jpg" alt="Lunch">
                </div>
                <!-- /.widget-user-image -->
                <h3 class="widget-user-username">
                    @Model.MenuDate.ToString("yyyy-MM-dd") @Model.MenuA.Name
                </h3>
                <h5 class="widget-user-desc">预订时间 @Model.MenuA.Duration</h5>
            </div>
            <div class="box-footer no-padding">
                <ul class="nav nav-stacked">
                    <li class="active bg-gray-light">
                        <a><input type="radio" name="radioLunch" class="flat-green" checked="checked"> <b>@Model.MenuA.Flag</b></a>
                    </li>
                    <li><a><i class="fa fa-circle-o text-red"></i> 荤菜： @Model.MenuA.Meat @Model.MenuA.MeatSmall</a></li>
                    <li><a><i class="fa fa-circle-o text-green"></i> 素菜： @Model.MenuA.Vegetable1 @Model.MenuA.Vegetable2</a></li>
                    <li class="bg-gray-light">
                        <a><input type="radio" name="radioLunch" class="flat-green"> <b>@Model.MenuB.Flag</b></a>
                    </li>
                    <li><a><i class="fa fa-circle-o text-red"></i> 荤菜： @Model.MenuB.Meat @Model.MenuB.MeatSmall</a></li>
                    <li><a><i class="fa fa-circle-o text-green"></i> 素菜： @Model.MenuB.Vegetable1 @Model.MenuB.Vegetable2</a></li>
                    <li class="bg-gray-light">
                        <a>
                            <!-- Minimal green style -->
                            <div class="form-group">
                                <label class="col-xs-4">
                                    <input type="radio" name="rl" class="flat-green" checked> 米饭
                                </label>
                                <label class="col-xs-4">
                                    <input type="radio" name="rl" class="flat-green"> 馒头
                                </label>
                                <label class="col-xs-4">
                                    <input type="checkbox" class="flat-green"> 加饭
                                </label>
                            </div>
                        </a>
                    </li>
                    <li>
                        <select class="form-control no-border" style="width: 49%; display: inline">
                            <option>-- 送餐区域 --</option>
                            <option>道口</option>
                            <option>桥吊</option>
                        </select>
                        <select class="form-control no-border" style="width: 49%; display: inline">
                            <option>-- 送餐点 --</option>
                            <option>Q801</option>
                            <option>Q802</option>
                        </select>
                    </li>
                </ul>
            </div>
        </div>
        <a href="javascript:alert('Confirm')" class="btn btn-primary btn-block margin-bottom bg-green-gradient">提交预订</a>
        <!-- /.widget-user -->
    </div>
    <!-- /.col -->
}
