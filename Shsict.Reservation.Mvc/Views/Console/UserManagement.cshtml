@model Shsict.Reservation.Mvc.Models.ConsoleModels.UserManagementDto

@section Styles {
    <link rel="stylesheet" href="~/Scripts/datatables/dataTables.bootstrap.css">
}

@section Scripts {
    <!-- DataTables -->
    <script src="~/Scripts/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/datatables/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#tblUser").DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": true,
                "ordering": false,
                "info": true,
                "autoWidth": true
            });
        });
    </script>
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <b><i class="fa fa-user"></i> 用户管理</b>
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> 管理控制台</a></li>
            <li><a href="#">系统管理</a></li>
            <li class="active">用户管理</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-body">
                        <table id="tblUser" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>用户名</th>
                                    <th>姓名</th>
                                    <th>工号</th>
                                    <th>部门</th>
                                    <th>班组</th>
                                    <th>岗位</th>
                                    <th>手机</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            @if (Model.Users != null && Model.Users.Count > 0)
                            {
                                <tbody>
                                    @foreach (var m in Model.Users)
                                    {
                                        <tr>
                                            <td>@m.UserId</td>
                                            <td>@m.EmployeeName</td>
                                            <td>@m.EmployeeNo</td>
                                            <td>@m.Department</td>
                                            <td>@m.Team</td>
                                            <td>@m.Position</td>
                                            <td>@m.Mobile</td>
                                            <td><a href="#" class="btn btn-info btn-xs"><i class="fa fa-refresh"></i> 更新信息</a></td>
                                        </tr>
                                    }
                                </tbody>
                            }
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
