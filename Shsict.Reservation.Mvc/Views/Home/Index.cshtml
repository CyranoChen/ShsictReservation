@model Shsict.Reservation.Mvc.Models.ConsoleModels.IndexDto
@{
    ViewBag.Title = "管理控制台";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <b><i class="fa fa-dashboard"></i> 管理控制台</b>
            <small>盛东自助订餐系统的后台管理</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> 管理控制台</a></li>
            <li class="active">首页</li>
        </ol>
    </section>
    <!-- Main content -->
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-body">
                        <div class="mailbox-controls">
                            <!-- /.btn-group -->
                            <div class="btn-group">
                                <button type="button" class="btn btn-default"
                                        onclick="window.location.href = window.location.href">
                                    <i class="fa fa-refresh"></i>
                                </button>
                                @* TODO *@
                                <button type="button" class="btn btn-default">
                                    <i class="fa fa-file-excel-o"></i> 导出记录
                                </button>
                            </div>

                            <div class="box-tools pull-right col-sm-3">
                                <div class="has-feedback input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" value="@DateTime.Today.ToString("yyyy年MM月dd日")"
                                           class="form-control" disabled="disabled" placeholder="订餐日期">
                                </div>
                            </div>
                            <!-- /.box-tools -->
                        </div>
                        <table id="tblOrder" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>送餐区域</th>
                                    <th>时段</th>
                                    <th>套餐</th>
                                    <th>主食</th>
                                    <th>加饭</th>
                                    <th>数量</th>
                                </tr>
                            </thead>
                            @if (Model.Reports != null && Model.Reports.Count > 0)
                            {
                                <tbody>
                                    @foreach (var m in Model.Reports)
                                    {
                                        <tr>
                                            <td>@m.DeliveryZone</td>
                                            <td>@m.MenuName</td>
                                            <td>@m.MenuFlag</td>
                                            <td>@m.StapleFood</td>
                                            <td>@if (m.ExtraFood) { @Html.Raw("加饭") }</td>
                                            <td>@m.OrderCount</td>
                                        </tr>
                                    }
                                </tbody>
                            }
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
