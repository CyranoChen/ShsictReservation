@using Shsict.Reservation.Mvc.Entities
@model Shsict.Reservation.Mvc.Models.AccountModels.LoginDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ConfigGlobal.Assembly.Product | 登录</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/iCheck/css")
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>@ConfigGlobal.Assembly.Product</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">
                <i class="fa fa-info-circle"></i> 非微信企业号成员请用工号和密码登录
            </p>
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "formLogin" }))
            {
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(m => m.UserId, new { @class = "form-control", @placeholder = "用户名/工号" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "密码" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox" checked="checked" id="RememberMe" name="RememberMe"> 记住密码
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat" id="btnLogin">
                            <i class="fa fa-sign-in"></i> 登录
                        </button>
                    </div>
                    <!-- /.col -->
                </div>
            }
        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/icheck")

    <script type="text/javascript">
        $(function () {
            $("#btnLogin").click(function () {
                if ($("#formLogin").valid()) {
                    document.forms["formLogin"].submit();
                }
            });

            $('input[type="checkbox"]').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>
</html>
